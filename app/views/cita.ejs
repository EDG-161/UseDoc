                              <h3 class="w3_inner_tittle two">Informacion de la cita</h3>
                                <div class="form-group">
                                  <label for="fecha">Fecha de la cita</label>
                                  <input type="text" class="form-control" name="fecha" disabled value="<%=cita.dat_cit%>">
                                </div>
                                <div class="form-group">
                                  <label for="nombre">Nombre del paciente</label>
                                  <input type="text" class="form-control" name="nombre" disabled value="<%=pn.nom_pac+" "+pn.appat_pac%>">
                                </div>
                                <div class="form-group">
                                  <label for="hora">Hora programada</label>
                                  <input type="text" name="hora" class="form-control" disabled value="<%=cita.hor_cit%>">
                                </div>
                                <div class="form-group">
                                  <label for="estado">Estado de la cita</label>
                                  <input type="text" name="estado" class="form-control" disabled value="<%if(cita.id_tip==1){%>Finalizada<%}else if(cita.id_tip==2){%>Pendiente<%}else if(cita.id_tip==3){%>Cancelada<%}%>">
                                </div>
                                <div class="form-group">
                                  <label for="Descripcion">Descripcion</label>
                                  <input type="text" name="Descripcion" class="form-control" disabled value="<%=cita.des_cit%>">
                                </div>
                            </div>
