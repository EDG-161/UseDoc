                <script type="text/javascript">
                  var f = 1;
                  var c =1;
                  function cancelar(){
                      document.getElementById('can_btn').style.display = "none";
                      document.getElementById('fin_btn').style.display = "block";
                      document.getElementById('can_block').style.display = "block";
                      document.getElementById('fin_block').style.display = "none";

                    }

                  function finalizar(){
                      document.getElementById('can_btn').style.display = "block";
                      document.getElementById('fin_btn').style.display = "none";
                      document.getElementById('can_block').style.display = "none";
                      document.getElementById('fin_block').style.display = "block";
                  }
                </script>
