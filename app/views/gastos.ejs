//obtenermos los gastos del medico
var gt = [];
//Definimos el rango de tiempo de los datos a mostrar
var tiempoMenor = 0;
var tiempoMayor = 0;
switch (tm) {
  case 0:
    break;
  case 1:
  tiempoMenor = (new Date().getTime()) - (86400000 * (new Date().getDay()));
  if (new Date().getDay()==0) {
    tiempoMayor = (new Date().getTime());
  }else {
    tiempoMayor = (new Date().getTime()) + ((86400000*7)- (86400000 * (new Date().getDay())))
  }
    break;
  case 2:
    tiempoMenor = (new Date().getTime()) - (86400000 * (new Date().getDate()));
    tiempoMayor = (new Date().getTime()) + (86400000 * (31-new Date().getDate()))

    break;
}
//recorremos los gastos para guardarlos de acuerdo al timpo que nos llega en tm
for (var i = 0; i < gastos.length; i++) {
  switch (tm) {
    case 0:
      gt.push(gastos[i]);
      break;
    case 1:
    var fecha = new Date(gastos[i].date_gas);
    if (fecha>=tiempoMenor&&fecha<= tiempoMayor) {
      gt.push(gastos[i]);
    }
      break;
    case 2:
    var fecha = new Date(gastos[i].date_gas);
    if (fecha>=tiempoMenor&&fecha<= tiempoMayor) {
      gt.push(gastos[i]);
    }
      break;
    case 3:
    var fecha = new Date(gastos[i].date_gas);
    if (fecha.getFullYear()==new Date().getFullYear()) {
      gt.push(gastos[i]);
    }
      break;

  }
}
