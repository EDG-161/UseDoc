                                    <div class="col-md-8 agile_w3l_social_media_text">
                                    <h4><%=paciente[0].nom_pac%></h4>
																		<%
																		let c = 0;
																			 if(paciente[2].length>0){
																				 for(var i =0;i<paciente[2].length;i++){
																					 if(paciente[2][i].id_tip==2){
																						 %>
																							 <p>Proxima cita:<%=paciente[2][i].dat_cit%></p>
																						 <%
																						 c++;
																					 }else if(paciente[2][i].id_tip==1){
																						 %>
																							 <p>Cita anterior<%=paciente[2][i].dat_cit%></p>
																						 <%
																						 c++;
																					 }
																					 if(c==2){
																						 break;
																					 }
																				 }
																			 }else{
																				 %>
																			 <p>Aún no hay citas programadas</p>
																				 <%
																			 }
																		%>
                                    </div>

                                    <div class="clearfix"></div>
                                    </div>
                                </div>

